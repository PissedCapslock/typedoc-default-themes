{{#if isVisible}}
    {{#if isLabel}}
        <li class="label {{cssClasses}}">
            <span>{{{wbr (formatDisplayName title)}}}</span>
        </li>
    {{else}}
        {{#if isGlobals}}
            <li class="globals {{#if isInPath}}current{{/if}} {{cssClasses}}">
                <a href="{{relativeURL url}}"><em>{{{wbr (formatDisplayName title)}}}</em></a>
            </li>
        {{else}}
            <li class="{{#if isInPath}}current{{/if}} {{cssClasses}}">
                <a href="{{relativeURL url}}">{{{wbr (formatDisplayName title)}}}</a>
                {{#if isInPath}}
                    {{#if children}}
                        <ul>
                            {{#each children}}
                                {{> navigation}}
                            {{/each}}
                        </ul>
                    {{/if}}
                {{/if}}
            </li>
        {{/if}}
    {{/if}}
{{/if}}
